{
  "name": "metaphasejs",
  "version": "0.9.4",
  "description": "Super easy, efficient and agnostic state management for Javascript",
  "keywords": [
    "state management",
    "react",
    "redux",
    "state",
    "management",
    "state manager",
    "reactjs"
  ],
  "main": "dist/metaphasejs.umd.js",
  "module": "dist/metaphasejs.es5.js",
  "typings": "dist/types/metaphasejs.d.ts",
  "files": [
    "dist"
  ],
  "author": "Yago LÃ³pez <yago.lopez@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/YagoLopez/metaphasejs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --notify",
    "test:watch": "jest --watch --notify",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "jest-report-coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "analysis": "source-map-explorer --html ./dist/metaphasejs.es5.js > analysis.html"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(src/*/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@types/knex": "^0.14.7",
    "chalk": "^2.3.2",
    "file-saver": "^1.3.8",
    "knex": "^0.14.3",
    "reflect-metadata": "^0.1.12",
    "sql.js": "^0.5.0"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/node": "^10.0.3",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "graphviz": "^0.0.8",
    "husky": "^0.14.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.0.0",
    "lodash.camelcase": "^4.3.0",
    "madge": "^3.1.1",
    "mock-knex": "YagoLopez/mock-knex",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "0.60.1",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.14.0",
    "semantic-release": "^15.0.0",
    "source-map-explorer": "^1.5.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.12.2"
  }
}
